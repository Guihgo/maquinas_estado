<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status" />

    <ListView
        android:id="@+id/lvPairedDevices"
        android:layout_width="match_parent"
        android:layout_height="192dp" />

    <TextView
        android:id="@+id/tvStatusConexao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status da conexao" />

    <Button
        android:text="Desconectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnDesconecta" />

    <Button
        android:text="Enviar teste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviaTeste" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDadoRecebido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dado recebido" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
